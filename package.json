{
  "name": "rocketjump-core",
  "sideEffects": false,
  "version": "0.0.0-experimental-c1722",
  "description": "The core of rocketjump",
  "main": "./lib/index.cjs.js",
  "module": "./lib/index.es.js",
  "repository": "https://github.com/inmagik/rocketjump-core",
  "authors": [
    "Giovanni Fumagalli <giovanni.fumagalli@inmagik.com>",
    "Mauro Bianchi <mauro.bianchi@inmagik.com>",
    "Alberto Osio <osioalberto@gmail.com>"
  ],
  "scripts": {
    "format": "prettier --write \"**/*.js\"",
    "prebuild": "rimraf lib",
    "build": "rollup -c",
    "build:watch": "rollup -c -w",
    "test": "jest"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/inmagik/rocketjump-core/issues"
  },
  "keywords": [
    "rj",
    "rocketjump"
  ],
  "dependencies": {
    "@babel/runtime": "^7.9.2"
  },
  "peerDependencies": {
    "react": "^16.8.0"
  },
  "devDependencies": {
    "@babel/core": "^7.9.0",
    "@babel/plugin-transform-runtime": "^7.9.0",
    "@babel/preset-env": "^7.9.5",
    "babel-eslint": "10.x",
    "babel-jest": "^25.4.0",
    "babel-plugin-dev-expression": "^0.2.2",
    "eslint": "6.x",
    "eslint-config-react-app": "^5.2.1",
    "eslint-plugin-flowtype": "4.x",
    "eslint-plugin-import": "2.x",
    "eslint-plugin-jsx-a11y": "6.x",
    "eslint-plugin-react": "7.x",
    "eslint-plugin-react-hooks": "2.x",
    "husky": "^4.2.5",
    "jest": "^25.4.0",
    "prettier": "^2.0.5",
    "pretty-quick": "^2.0.1",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "rimraf": "^3.0.2",
    "rollup": "^2.7.2",
    "rollup-plugin-babel": "^4.4.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged --pattern \"**/*.js\""
    }
